<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/golden"
    tools:context=".play">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/play_tb"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        android:background="@color/golden">

        <TextView
            android:id="@+id/play_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/playHeader"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:theme="@style/Theme.Bobing.TitleText" />

    </androidx.appcompat.widget.Toolbar>

    <GridLayout
        android:id="@+id/play_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="2"
        >
        <ImageView
            android:id="@+id/dice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:src="@drawable/dv1"
            />
        <ImageView
            android:id="@+id/dice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:src="@drawable/dv2"
            />
        <ImageView
            android:id="@+id/dice3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:src="@drawable/dv3"
            />
        <ImageView
            android:id="@+id/dice4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:src="@drawable/dv4"
            />
        <ImageView
            android:id="@+id/dice5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:src="@drawable/dv5"
            />
        <ImageView
            android:id="@+id/dice6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:src="@drawable/dv6"
            />

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/hheader_tv"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/congratulations"
            app:autoSizeTextType="uniform"
            android:theme="@style/Theme.Bobing.ConGText"
            />
        <TextView
            android:id="@+id/header_tv"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="@string/ZhuangYuan"
            app:autoSizeTextType="uniform"
            android:theme="@style/Theme.Bobing.ConGText"
            />


    </LinearLayout>

    <TextView
        android:id="@+id/dice_result_i_show_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="result"
        android:gravity="center"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:textSize="20sp"
        android:padding="10dp"
        />

</LinearLayout>