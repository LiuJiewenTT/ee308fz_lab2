<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/golden"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".multi_play_home_Activity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mulp_tb"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        android:background="@color/golden">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/multiplayer_mode"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:theme="@style/Theme.Bobing.TitleText" />

    </androidx.appcompat.widget.Toolbar>



<!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_gravity="center"-->
<!--        android:textAlignment="center"-->
<!--        android:text="@string/multiplayer_mode"-->
<!--        android:textColor="@color/black"-->
<!--        android:theme="@style/Theme.Bobing.TitleText"/>-->


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:scaleType="fitCenter"
        android:src="@drawable/a19" />

    <TextView
        android:id="@+id/mulp_hplayernb_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="playerNo."
        android:textColor="@color/white"
        android:textSize="60sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/mulp_hnextp_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/btn_twhite"
        android:padding="30dp"
        android:text="@string/play_a_round"
        android:theme="@style/Theme.Bobing.TitleText" />

    <SeekBar
        android:id="@+id/mulp_seekBar"
        style="@android:style/Widget.Material.Light.SeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:max="10"
        android:progress="3" />

</LinearLayout>